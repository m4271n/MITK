<!--
* - MITK : The original interaction scheme
*   - middle mouse button : panning
*   - right mouse button  : zooming
*   - wheel               : scrolling
-->
<config>
  <!-- Zoom sensitivity -->
  <param name="zoomFactor" value="5"/>
  <!-- Zoom either by moving mouse leftright or updown -->
  <param name="zoomDirection" value="updown"/>
  <!-- react to an event, even tough is was already processed by a DataInteractor-->
  <param name="alwaysReact" value="false"/>
  <!-- panning with two fingers -->
  <event_variant class="GestureBeginEvent" name="StartGestureMove">
    <attribute name="EventState" value="Begin"/>
    <attribute name="GestureType" value="TwoFingerPan"/>
    <attribute name="GestureRating" value="MayBeGesture"/>
  </event_variant>
  <event_variant class="GestureUpdateEvent" name="GestureMoving">
    <attribute name="EventState" value="Update"/>
    <attribute name="GestureType" value="TwoFingerPan"/>
    <attribute name="GestureRating" value="TriggerGesture"/>
  </event_variant>
  <event_variant class="GestureEndEvent" name="EndGestureMoving">
    <attribute name="EventState" value="End"/>
    <attribute name="GestureType" value="TwoFingerPan"/>
    <attribute name="GestureRating" value="FinishGesture"/>
  </event_variant>
  <!-- tap with one finger -->
  <event_variant class="GestureBeginEvent" name="StartGestureTap">
    <attribute name="EventState" value="Begin"/>
    <attribute name="GestureType" value="Tap"/>
    <attribute name="GestureRating" value="TriggerGesture"/>
  </event_variant>
  <event_variant class="GestureEndEvent" name="EndGestureTap">
    <attribute name="EventState" value="End"/>
    <attribute name="GestureType" value="Tap"/>
    <attribute name="GestureRating" value="FinishGesture"/>
  </event_variant>
</config>